<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">


        <TextView
            android:id="@+id/activityType"
            android:layout_width="42dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:text="Group"
            android:textSize="10sp"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.021"
            card_view:layout_constraintStart_toEndOf="@+id/actvityTypeIcon"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/createdAt"
            android:layout_width="47dp"
            android:layout_height="11dp"
            android:layout_marginStart="4dp"
            android:text="May 21"
            android:textSize="8sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.006"
            card_view:layout_constraintStart_toEndOf="@+id/userProfile"
            card_view:layout_constraintTop_toBottomOf="@+id/userName" />

        <ImageView
            android:id="@+id/actvityTypeIcon"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/actvityTypeIcon"
            card_view:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="54dp"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:text="Johnny Doe"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/userProfile"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityShortDesciption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Janette Doe assigned a task to you:"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.069"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/userProfile" />

        <TextView
            android:id="@+id/activityContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum e dolorem fnrejfnrejkfnrejnfker frenjfk cbfenfkjren"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.145"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/activityShortDesciption"
            card_view:layout_constraintVertical_bias="0.238" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>